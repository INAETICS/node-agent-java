#cloud-config

coreos:
  etcd:
      #discovery: https://discovery.etcd.io/XYZ
      addr: $public_ipv4:4001
      peer-addr: $public_ipv4:7001
  units:
    - name: etcd.service
      command: start
    - name: docker-tcp.socket
      command: start
      enable: true
      content: |
        [Unit]
        Description=Docker Socket for the API

        [Socket]
        ListenStream=4243
        Service=docker.service
        BindIPv6Only=both

        [Install]
        WantedBy=sockets.target
    - name: node-agent-service.service
      command: start
      runtime: no
      enable: true
      content: |
        [Unit]
        Description=Node Agent Service
        After=docker.service
        Requires=docker.service

        [Service]
        ExecStartPre=/bin/bash -c 'if [ ! -d "/var/lib/node-agent-service" ]; then git clone https://github.com/INAETICS/node-agent-service.git /var/lib/node-agent-service; fi'
        ExecStart=/var/lib/node-agent-service/node-agent-service %m
        ExecStartPost=/usr/bin/etcdctl set /inaetics/node-agent-service/%m $public_ipv4:8080
        ExecStopPost=/usr/bin/etcdctl rm /inaetics/node-agent-service/%m
        TimeoutSec=600
        Restart=always
 
        [Install]
        WantedBy=multi-user.target
